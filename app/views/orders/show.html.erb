					<tr><td>Material:</td><td><%=@order.earring.material%></td></tr>
					<tr><td>Condition:</td><td>
					<%if @order.address.used==true%>
						Used
					<%else%>
						New
					<%end%></td>
				</tbody>
			</table>
			<p><%=@order.earring.description%></p>
			<h4>Shipping Address</h4>
			<table class="table">
				<tbody>
					<tr><td>Name:</td><td><%=current_user.name %></td></tr>
					<tr><td>Street:</td><td><%=@order.address.street%></td></tr>
					<tr><td></td><td><%=@order.address.street2%></td></tr>
					<tr><td>City:</td><td><%=@order.address.city%></td></tr>
					<tr><td>State:</td><td><%=@order.address.state%></td></tr>
					<tr><td>ZIP Code:</td><td><%=@order.address.zip%></td></tr>
				</tbody>
			</table>
