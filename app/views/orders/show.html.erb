</br>
<div class="container">
	<div class="row bbg">
		<div class="span6">
			<div id="earrings">
				<div class="box box-large">
					<%= image_tag @earring.image(:medium)%>
				</div>
			</div>
		</div>
		<div class="span6">
			<h4>Your order</h4>
			<table class="table">
				<tbody>
					<tr><td colspan="2">
					<% if @order.address.buy==true %>
						Purchased:
					<% else %>
						Sold:
					<% end %>
					<%=@order.created_at.strftime("%d-%m-%Y at %H:%M")%></td></tr>
					<tr><td>Vendor:</td><td><%=@order.earring.vendor %></td></tr>
