<h4>User Sales</h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Order ID</th>
			<th>User</th>
			<th>Address</th>
			<th>Earring ID and Sku</th>
			<th>Picture</th>
			<th>Status</th>
			<th>Received</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
			<%if order.buy == false %>
				<tr>
					<td><%=order.id%></td>
					<td><%=order.user.name%></td>
					<td>
						<%=order.address.street%><br>
						<%=order.address.street2%><br>
						<%=order.address.city%>, <%=order.address.state%> <%=order.address.zip%>
					</td>
					<td>ID: <%=order.earring.id%> - Sku: <%=order.earring.sku%></td>
					<td><%=link_to earring_path(order.earring),  image_tag order.earring.image(:small) %></td>
					<td><%=order.status %></td>
					<td><%unless order.status=="Received"%><%=link_to 'Received!', "/orders/#{order.id}/arrival", class:"btn"%><%end%></td>
				</tr>
			<%end%>
		<%end%>
	</tbody>
</table>
