<h3>New comment</h3>

<%= simple_form_for(@comment, html: { style: "width:100%; max-width:600px"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :input_html => { :value => @email} %>
    <%= f.input :text, as: :text %>
    <%= f.button :submit %>
  </div>

<% end %>


<%= link_to 'Back', comments_path %>
