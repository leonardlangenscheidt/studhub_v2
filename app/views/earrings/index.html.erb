<%=link_to "Show only Tiffany's", earrings_path(:v=>"Tiffany & Co.")%>
<%=link_to "Show only Chanel", earrings_path(:v=>"Chanel")%>

<div id="earrings">
	<div class="inner-container">
		<% @earrings.each do |earring| %>
			<%if earring.vendor == @vendor  || @vendor == nil%>
				<div class="box box-small bbg">
					<%= link_to (image_tag earring.image(:medium)),  earring_path(earring)%>
					<div class="description">
						<%=earring.vendor%> <%=earring.design%>
					</div>
				</div>
			<%end%>
		<% end %>
	</div>
</div>

<p style="clear:both; text-align:center"></br></br></br>Don't see your earring here? Tell us what you'd like to see. We're constantly expanding our selection.</p>

