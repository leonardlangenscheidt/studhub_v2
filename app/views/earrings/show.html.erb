<div class="container bbg">
	<div class="row-fluid">
		<div class="progress">
		  	<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="width: 33%">
		    		<span class="sr-only">33% Complete (success)</span>
		  	</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<div id="earrings">
				<div class="box box-large">
					<%= image_tag @earring.image(:medium)%>
				</div>
			</div>
		</div>

		<div class="span6">
			<!-- <h3><%=@earring.vendor%> <%=@earring.collection%> <%=@earring.material%> <%=@earring.design%></h3>
			<strong>Vendor:</strong> <%=@earring.vendor%></br>
			<strong>Collection:</strong> <%=@earring.collection%></br>
			<strong>Design:</strong> <%=@earring.design%></br>
			<strong>Material:</strong> <%=@earring.material%></br>
			<%unless @earring.size==nil%>
				<strong>Size:</strong> <%=@earring.size%>mm</br>
			<%end%>
			<strong>Description:</strong>  <%=@earring.description%></br></br> -->
			<h4>Your missing earring</h4>
			<table class="table">
				<tbody>
					<tr><td>Vendor:</td><td><%=@earring.vendor %></td></tr>
					<tr><td>Collection:</td><td><%=@earring.collection%></td></tr>
					<tr><td>Design</td><td><%=@earring.design%></td></tr>
					<tr><td>Material:</td><td><%=@earring.material%></td></tr>
				</tbody>
			</table>
			<p><%=@earring.description%></p>

			<%if current_user%>
				<%= link_to "Buy new for $#{@earring.price}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => false, :used => false), class:'btn btn-large'%>
				<%= link_to "Buy new left for $#{@earring.price}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => false, :used => false), class:'btn btn-large'%>
				<%= link_to "Buy new right for $#{@earring.price}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => true, :used => false), class:'btn btn-large'%>
				<%= link_to "Buy used for $#{@earring.price-10}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => false, :used => true), class:'btn btn-large'%>
				<%= link_to "Buy used left for $#{@earring.price-10}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => false, :used => true), class:'btn btn-large'%>
				<%= link_to "Buy used right for $#{@earring.price-10}.00", new_address_path(:earring_id => @earring.id, :buy => true, :right => true, :used => true), class:'btn btn-large'%>
				<%= link_to "Sell for $#{@earring.price-20}.00", new_address_path(:earring_id => @earring.id, :buy => false, :right => false, :used => true), class:'btn btn-large'%>
				<%= link_to "Sell left for $#{@earring.price-20}.00", new_address_path(:earring_id => @earring.id, :buy => false, :right => false, :used => true), class:'btn btn-large'%>
				<%= link_to "Sell right for $#{@earring.price-20}.00", new_address_path(:earring_id => @earring.id, :buy => false, :right => true, :used => true), class:'btn btn-large'%>
			<%else%>
				To continue please</br>
				<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class:'btn btn-large' %>
			<%end%>
		</div>
	</div>
</div>

<br>
<div class="links" style="clear:both; text-align:center">
	<%= link_to 'Back to Earring Selection', earrings_path %>
</div>
