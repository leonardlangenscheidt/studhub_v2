<% if notice %>
	<p class="alert alert-failure" id="notice"><%= notice %></p>
<%end%>

<div class="container">
	<div class="row-fluid">
		<h1><%=@earring.vendor%> <%=@earring.collection%> <%=@earring.material%> <%=@earring.design%></h1>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<div id="earrings">
				<div class="box box-large">
					<%= image_tag @earring.image(:medium)%>
				</div>
			</div>
		</div>
		<div class="span4">
			<strong>Vendor:</strong> <%=@earring.vendor%></br>
			<strong>Collection:</strong> <%=@earring.collection%></br>
			<strong>Design:</strong> <%=@earring.design%></br>
			<strong>Material:</strong> <%=@earring.material%></br>
			<%unless @earring.size==nil%>
				<strong>Size:</strong> <%=@earring.size%>mm</br>
			<%end%>
			<strong>Price:</strong> $<%=@earring.price%>.00</br>
			<strong>Description:</strong>  <%=@earring.description%></br></br>
		</div>
		<div class="span4" style="text-align:center">
			<%if current_user%>
				<%= link_to "Buy for $#{@earring.price}.00", new_address_path(:earring_id => @earring.id, :buy => true), class:'btn btn-large'%>
				<%= link_to "Sell for $#{@earring.price-10}.00", new_address_path(:earring_id => @earring.id, :buy => false), class:'btn btn-large'%>
			<%else%>
				To continue please</br>
				<%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class:'btn btn-large' %>
			<%end%>
		</div>
	</div>
